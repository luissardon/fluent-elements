{
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "**/lib/**/*"
    ]
  },
  "rules": {
    "prettier": true,
    "interface-name": false,
    "no-console": false,
    "quotemark": [
      true,
      "single"
    ]
  },
  "rulesDirectory": [
    "tslint-plugin-prettier"
  ]
}
